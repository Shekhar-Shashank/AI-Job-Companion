{
  "name": "personal-rag-agent",
  "version": "1.0.0",
  "private": true,
  "description": "Personal RAG-based AI Agent Platform for career and life management",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "concurrently \"npm run dev:backend\" \"npm run dev:frontend\"",
    "dev:backend": "npm run start:dev -w @rag-agent/backend",
    "dev:frontend": "npm run dev -w @rag-agent/frontend",
    "build": "npm run build:backend && npm run build:frontend",
    "build:backend": "npm run build -w @rag-agent/backend",
    "build:frontend": "npm run build -w @rag-agent/frontend",
    "lint": "npm run lint -w @rag-agent/backend && npm run lint -w @rag-agent/frontend",
    "test": "npm run test -w @rag-agent/backend",
    "db:generate": "npm run db:generate -w @rag-agent/backend",
    "db:push": "npm run db:push -w @rag-agent/backend",
    "db:studio": "npm run db:studio -w @rag-agent/backend",
    "db:migrate": "npm run db:migrate -w @rag-agent/backend",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "clean": "rimraf apps/*/node_modules apps/*/.next apps/*/dist node_modules"
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "rimraf": "^5.0.5"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
